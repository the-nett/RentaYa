@model RentaloYa.Web.ViewModels.Garage.CreateItemViewModel

@{
    ViewData["Title"] = "Registrar Nuevo Artículo";
    var categoryList = ViewData["CategoryList"] as IEnumerable<SelectListItem>;
    var rentalTypeList = ViewData["RentalTypeList"] as IEnumerable<SelectListItem>;
}

<section class="py-5">
    <div class="container">
        <h2 class="h4 fw-bold mb-4">Registrar Nuevo Artículo</h2>
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <form asp-action="AddItem" asp-controller="Garage" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken() @* Importante para seguridad CSRF *@
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control"/>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Category" class="form-label"></label>
                                <select asp-for="Category" asp-items="categoryList" class="form-select">
                                    <option value="">-- Seleccione una Categoría --</option>
                                </select>
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <label asp-for="Description" class="form-label"></label>
                                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="RentType" class="form-label"></label>
                                <select asp-for="RentType" asp-items="rentalTypeList" class="form-select">
                                    <option value="">-- Seleccione Tipo de Renta --</option>
                                </select>
                                <span asp-validation-for="RentType" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Price" class="form-label"></label>
                                <input asp-for="Price" type="number" step="0.01" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Quantity" class="form-label"></label>
                                <input asp-for="Quantity" type="number" class="form-control" />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ImageUrl" class="form-label"></label>
                                <input asp-for="ImageUrl" class="form-control" placeholder="https://ejemplo.com/imagen.jpg" />
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Location" class="form-label"></label>
                                <input asp-for="Location" class="form-control" />
                                <span asp-validation-for="Location" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end mt-4">
                        <a href="@Url.Action("Index", "Garage")" class="btn btn-secondary me-2">Cancelar</a>
                        <button type="submit" class="btn btn-primary">Registrar Artículo</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}