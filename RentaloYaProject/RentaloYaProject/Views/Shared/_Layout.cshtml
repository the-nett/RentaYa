<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RentaloYaProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RentaloYaProject.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <header class="bg-white border-bottom shadow-sm">
        <nav class="navbar navbar-expand-lg navbar-light container">
            <a class="navbar-brand fs-4 fw-bold text-dark" href="/">RentalWeb</a>

            @if (User.Identity.IsAuthenticated)
            {
                <a class="nav-link text-dark d-none d-lg-inline me-3" asp-controller="Garage" asp-action="Index">
                    <i class="bi bi-house-door me-1"></i> Garaje
                </a>
                <a class="nav-link text-dark d-none d-lg-inline me-3" asp-controller="MyPosts" asp-action="Index">
                    <i class="bi bi-megaphone me-1"></i> Mis publicaciones
                </a>
            }

            
            <a class="nav-link text-dark d-none d-lg-inline me-3" asp-controller="PublicPosts" asp-action="Index">
                <i class="bi bi-grid-3x3-gap me-1"></i> Publicaciones
            </a>

            <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#navbarRental"
                    aria-controls="navbarRental" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarRental">
                <ul class="navbar-nav align-items-lg-center">
                    
                    <li class="nav-item d-lg-none">
                        <a class="nav-link text-dark" asp-controller="PublicPosts" asp-action="Index">
                            <i class="bi bi-grid-3x3-gap me-1"></i> Publicaciones
                        </a>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item d-lg-none">
                            <a class="nav-link text-dark" asp-controller="Garage" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i> Garaje
                            </a>
                        </li>
                        <li class="nav-item d-lg-none">
                            <a class="nav-link text-dark" asp-controller="MyPosts" asp-action="Index">
                                <i class="bi bi-megaphone me-1"></i> Mis publicaciones
                            </a>
                        </li>

                        <li class="nav-item me-3">
                            <span class="navbar-text">
                                Hola, <strong>@User.Identity.Name</strong>!
                            </span>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-secondary d-flex align-items-center" href="/Auth/Logout">
                                <i class="bi bi-box-arrow-right me-1"></i> Cerrar Sesión
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item me-2">
                            <a class="btn btn-link text-secondary text-decoration-none" asp-controller="Login" asp-action="Index">Iniciar Sesión</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-primary" asp-controller="Login" asp-action="Index">Registrarse</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            @await Html.PartialAsync("_Notification")
        </main>
    </div>

    <footer class="bg-dark text-light py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-3 mb-4 mb-md-0">
                    <h3 class="text-white fw-bold mb-3">RentalWeb</h3>
                    <p class="text-muted small">La plataforma líder para rentar artículos de todo tipo</p>
                </div>
                <div class="col-md-3 mb-4 mb-md-0">
                    <h4 class="text-white fw-medium mb-3">Enlaces</h4>
                    <ul class="list-unstyled small">
                        <li><a href="#" class="text-muted text-decoration-none hover-white">Inicio</a></li>
                        <li><a href="#" class="text-muted text-decoration-none hover-white">Categorías</a></li>
                        <li><a href="#" class="text-muted text-decoration-none hover-white">Cómo Funciona</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-4 mb-md-0">
                    <h4 class="text-white fw-medium mb-3">Legal</h4>
                    <ul class="list-unstyled small">
                        <li><a href="#" class="text-muted text-decoration-none hover-white">Términos de Servicio</a></li>
                        <li><a href="#" class="text-muted text-decoration-none hover-white">Política de Privacidad</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h4 class="text-white fw-medium mb-3">Contacto</h4>
                    <ul class="list-unstyled small">
                        <li class="text-muted">soporte@@RentalWeb.com</li>
                        <li class="text-muted">+52 55 1234 5678</li>
                    </ul>
                </div>
            </div>
            <div class="border-top border-secondary mt-5 pt-4 text-center small text-muted">
                &copy; @DateTime.Now.Year RentalWeb. Todos los derechos reservados.
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Chat 3CX - Integración -->
    <call-us-selector phonesystem-url="https://1259.3cx.cloud" party="LiveChat828306"></call-us-selector>
    <script defer src="https://downloads-global.3cx.com/downloads/livechatandtalk/v1/callus.js" id="tcx-callus-js" charset="utf-8"></script>

</body>
</html>